<h1>Listing dogs</h1>

<% unless @dogs.empty?  %>
    <% @dogs.each do |dog| %>
        <table>
          <tr>
            <td>Name</td>
            <td><%= dog.name %></td>
          </tr>
          <tr>
            <td>Birthday</td>
            <td><%= dog.birthday %></td>
          </tr>
          <tr>
            <th colspan="2">
              <div class="btn-group">
                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                  More...
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Show', dog %></li>
                  <li><%= link_to 'Edit', edit_dog_path(dog) %></li>
                  <li><%= link_to 'Destroy', dog, method: :delete, data: {confirm: 'Are you sure?'} %></li>
                </ul>
              </div>
            </th>
          </tr>
        </table>
    <% end %>
<% end %>

<br />

<%= link_to 'New Dog', new_dog_path %>
