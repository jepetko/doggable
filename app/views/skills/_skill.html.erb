<li class="span4 simple-skill">
  <h4><%= skill.name %></h4>
  <a class="thumbnail">
    <% if !params[:choose].nil? %>
        <input type="checkbox" value="<%=skill.id%>">
    <% end %>
    <img data-src="holder.js/160x80" src="<%= skill.picture.url(:medium) %>" alt="<%= skill.name %>">
  </a>

  <% if current_user.has_role?(:admin) %>
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          More
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Edit', edit_skill_path(skill) %></li>
          <li><%= link_to 'Destroy', skill, method: :delete, data: {confirm: 'Are you sure?'} %></li>
        </ul>
      </div>
  <% end %>
</li>